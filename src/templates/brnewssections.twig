{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("pedrops\\craftbreakingnews\\assetbundles\\craftbreakingnews\\CraftBreakingNewsAsset") %}
{% do view.registerAssetBundle("pedrops\\craftbreakingnews\\assetbundles\\brnewssectionscpsection\\BrnewssectionsCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/pedger/craft-breaking-news/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Craft Breaking News" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('craft-breaking-news') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@pedrops/craftbreakingnews/assetbundles/brnewssectionscpsection/dist', true) ~ '/img/Brnewssections-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('craft-breaking-news') }}</a>
    </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ "Brnewssections CP Section body goes here"|t('craft-breaking-news') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
